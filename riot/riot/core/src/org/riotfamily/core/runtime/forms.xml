<?xml version="1.0" encoding="UTF-8"?>
<form-config
	xmlns="http://www.riotfamily.org/schema/forms/form-config"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
		http://www.riotfamily.org/schema/forms/form-config
		http://www.riotfamily.org/schema/forms/form-config-9.3.xsd">

	<form id="riotUser" bean-class="org.riotfamily.core.security.auth.User">
		<group>
			<editable-if-new>
				<textfield bind="id" required="true" />
			</editable-if-new>
			<textfield bind="name" />
			<textfield bind="email" />
		</group>
		<group>
			<passwordfield bind="newPassword" confirm="true"/>
		</group>
	</form>

</form-config>
